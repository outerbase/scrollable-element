---
import { ScrollableElement } from '../components/scrollable-element'
---

<html lang="en" class="h-full">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
    </head>

    <body class="vh-full bg-theme-page dark:bg-theme-page-dark text-theme-text dark:text-theme-text-dark">
        <main class="m-12 pb-24">
            <div class="bg-white dark:bg-black">
                <div class="relative h-52 px-8">
                    <h1 class="z-10 absolute top-0 left-0 text-xl black">axis unspecified</h1>
                    <ScrollableElement client:load><div class="h-[1200px] w-[2400px] bg-blue-50"></div></ScrollableElement>
                </div>
                <div class="relative h-52 px-8">
                    <h1 class="z-10 absolute top-0 left-0 text-xl black">axis=horizontal</h1>
                    <ScrollableElement client:load .axis={'horizontal'}>
                        <div class="h-[1200px] w-[2400px] bg-yellow-50"></div></ScrollableElement
                    >
                </div>
                <div class="relative h-52 px-8">
                    <h1 class="z-10 absolute top-0 left-0 text-xl black">axis=vertical</h1>
                    <ScrollableElement client:load .axis={'vertical'}
                        ><div class="h-[1200px] w-[2400px] bg-green-50"></div></ScrollableElement
                    >
                </div>
                <div class="relative h-52 px-8">
                    <h1 class="z-10 absolute top-0 left-0 text-xl black">axis=both</h1>

                    <ScrollableElement client:load .axis={'both'}><div class="h-[1200px] w-[2400px] bg-red-50"></div></ScrollableElement>
                </div>
            </div>
        </main>
    </body>
</html>
